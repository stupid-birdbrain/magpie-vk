<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Assimp" Version="3.0.0" />
        <PackageReference Include="SDL3-CS" Version="3.2.16.1" />
        <PackageReference Include="SDL3-CS.Native" Version="3.2.20" />
        <PackageReference Include="SDL3-CS.Native.Image" Version="3.2.4" />
        <PackageReference Include="Silk.NET.Core" Version="2.22.0" />
        <PackageReference Include="Vortice.Vulkan" Version="2.1.3" />

        <PackageReference Include="Vortice.ShaderCompiler" Version="1.8.0"/>
        <PackageReference Include="Vortice.SpirvCross" Version="1.5.3"/>
    </ItemGroup>

    <ItemGroup>
        <None Update="SDL3.dll">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>
